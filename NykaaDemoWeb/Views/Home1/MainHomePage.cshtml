                    </ul>
                </div>*@
            </div>
        </nav>
    </header>
    <div>

        <div class="topnav d-flex justify-content-around">
            @*<a href="#home">Home</a>*@


            @{
                foreach (var item in Model)
                {
                    <ul class="list-unstyled pb-0">
                        <li class="dropdown-submenu ">
                            <a class="dropdown-item" tabindex="-1" href="">@item.CatName</a>
                            @if (item.SubCategories.Count > 0)
                            {
                                <ul class="dropdown-menu text-black-50">
                                    @foreach (var item2 in item.SubCategories)
                                    {
                                        <li><a class="dropdown-item text-black-50" tabindex="-1" href="/Category/DisplayProducts/@item2.ScatId">@item2.ScatName</a></li>
                                    }
                                            </ul>
                            }
                                </li>
                            </ul>
                }
            }
        </div>
    </div>
