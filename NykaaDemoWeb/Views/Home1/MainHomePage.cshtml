<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 d-flex justify-content-around">
            <div class="container ">
                <div>
                    <a class="navbar-brand">
                        <img src="/css/nykaa.jpg" width="80" height="40" />
                    </a>
                </div>
                <div>
                    @if (ViewBag.status == 1)
                    {
                        <p> @ViewBag.p.Pname</p>
                        <p> @ViewBag.p.Pbrand</p>
                        <p> @ViewBag.p.Pdescription</p>
                        <p> @ViewBag.p.Pprice</p>
                        <p> @ViewBag.p.Pimg</p>
                    }
                    else
                    {

                        @using (Html.BeginForm("DisplayProductsPage", "Product", FormMethod.Post))
                        {

                                    <div>

                                <p>@Html.TextBox("PName")</p>
                                        <button class="btn login_btn" type="submit" value="Search">
                                            <a:hover>Search </a:hover>
                                        </button>
                                    </div>

                        }
                    }
                    </div>
                <div>
                    @using (Html.BeginForm("Index", "Login", FormMethod.Get))
                        {
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn login_btn">
                        </div>
                            

                        }

                </div>

                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
